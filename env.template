# Environment Variables Template
# Copy this file to .env and fill in the actual values
# NEVER commit .env files to version control

# Database Configuration
DB_PASSWORD=your-secure-database-password
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/telco
SPRING_DATASOURCE_USERNAME=telco
SPRING_DATASOURCE_PASSWORD=your-secure-database-password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-at-least-256-bits-long
JWT_EXPIRATION=86400000

# Encryption Keys
ENCRYPTION_KEY=your-encryption-key-32-characters-long

# API Keys
API_KEY=your-api-key
SMS_API_KEY=your-sms-provider-api-key
EMAIL_PASSWORD=your-email-service-password

# Kafka Configuration
KAFKA_PASSWORD=your-kafka-password
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# CAPTCHA Configuration
CAPTCHA_SITE_KEY=your-recaptcha-site-key
CAPTCHA_SECRET_KEY=your-recaptcha-secret-key

# Monitoring
MONITORING_TOKEN=your-monitoring-service-token
PROMETHEUS_ENDPOINT=http://localhost:9090

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST_CAPACITY=20

# Environment
SPRING_PROFILES_ACTIVE=dev
ENVIRONMENT=development

# Logging
LOG_LEVEL=INFO
LOG_FILE_PATH=/app/logs/user-service.log

# SSL Configuration (Production)
SSL_KEYSTORE_PATH=/app/ssl/keystore.p12
SSL_KEYSTORE_PASSWORD=your-ssl-keystore-password
SSL_KEYSTORE_TYPE=PKCS12

# External Services
EXTERNAL_API_BASE_URL=https://api.external-service.com
EXTERNAL_API_KEY=your-external-api-key

# Cache Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# File Storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=your-s3-bucket-name
AWS_REGION=us-east-1

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-email-password
SMTP_SSL_ENABLED=true

# SMS Configuration
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Notification Configuration
PUSH_NOTIFICATION_KEY=your-push-notification-key
WEBHOOK_SECRET=your-webhook-secret

# Performance
CONNECTION_POOL_MAX_SIZE=50
CONNECTION_POOL_MIN_IDLE=10
CONNECTION_TIMEOUT=30000
IDLE_TIMEOUT=600000

# Feature Flags
ENABLE_CAPTCHA=true
ENABLE_RATE_LIMITING=true
ENABLE_ROW_LEVEL_SECURITY=true
ENABLE_AUDIT_LOGGING=true
ENABLE_METRICS=true

# Development Only
DEBUG_MODE=false
MOCK_EXTERNAL_SERVICES=false
SKIP_AUTHENTICATION=false
